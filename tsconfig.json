{
    "compilerOptions": {
        "baseUrl": ".",
        "strictNullChecks": true,
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "jsx": "preserve",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "declaration": false,
        "removeComments": true,
        "target": "es6",
        "lib": ["dom", "es7"],
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "paths": {
            "@reco-m/core": ["./src/core/index"],
            "@reco-m/core-ui": ["./src/core-ui/index"],

            "@reco-m/file-test": ["./src/apps/file/test/index"],
            "@reco-m/auth-account": ["./src/apps/auth/account/index"],
            "@reco-m/auth-login": ["./src/apps/auth/login/index"],
            "@reco-m/auth-models": ["./src/apps/auth/models/index"],
            "@reco-m/auth-service": ["./src/apps/auth/service/index"],
            "@reco-m/auth-gestures": ["./src/apps/auth/gestures/index"],

            "@reco-m/my": ["./src/apps/my/my/index"],
            "@reco-m/my-models": ["./src/apps/my/models/index"],

            "@reco-m/tag-service": ["./src/apps/tag/service/index"],

            "@reco-m/system-about": ["./src/apps/system/about/index"],
            "@reco-m/system-models": ["./src/apps/system/models/index"],
            "@reco-m/system-service": ["./src/apps/system/service/index"],

            "@reco-m/statistics": ["./src/apps/statistics/index"],

            "@reco-m/files-manage": ["./src/apps/filesManage/filesManage/index"],
            "@reco-m/files-manage-models": ["./src/apps/filesManage/models/index"],
            "@reco-m/files-manage-service": ["./src/apps/filesManage/service/index"],

            "@reco-m/signature-models": ["./src/apps/signature/models/index"],
            "@reco-m/signature-service": ["./src/apps/signature/service/index"],
            "@reco-m/signature-signature": ["./src/apps/signature/signature/index"],

             /**
             * h5页面过渡页
             */
             "@reco-m/h5home-h5home": ["src/apps/h5home/h5home/index"],
             "@reco-m/h5home-models": ["src/apps/h5home/models/index"],
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "dist", "lib", "es"],
    "awesomeTypescriptLoaderOptions": {
        "forceIsolatedModules": true,
        "useCache": true,
        "usePrecompiledFiles": true
    }
}
